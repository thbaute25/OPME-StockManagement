@{
    ViewData["Title"] = "OPME Stock Management";
}

<div class="text-center">
    <h1 class="display-4">Sistema de Gestão de Estoque OPME</h1>
    <p class="lead">Sistema para controle e gerenciamento de materiais cirúrgicos</p>
    
    <div class="row mt-5">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-building me-2"></i>Fornecedores</h5>
                    <p class="card-text">Gerenciar fornecedores de materiais</p>
                    <a asp-controller="SuppliersMvc" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Gerenciar
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box me-2"></i>Produtos</h5>
                    <p class="card-text">Gerenciar produtos e inventário</p>
                    <a asp-controller="ProductsMvc" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Gerenciar
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-clipboard-data me-2"></i>Estoque</h5>
                    <p class="card-text">Controle de estoque e movimentações</p>
                    <a asp-controller="StockMvc" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Visualizar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h3>API Documentation</h3>
        <p>Acesse a documentação completa da API através do Swagger</p>
        <a href="/swagger" class="btn btn-success" target="_blank">Abrir Swagger UI</a>
    </div>
</div>

