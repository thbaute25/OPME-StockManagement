<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OPME Stock Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-box-seam me-2"></i>OPME Stock Management
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Início
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="produtosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-box me-1"></i>Produtos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="produtosDropdown">
                                <li><a class="dropdown-item" asp-controller="ProductsMvc" asp-action="Index"><i class="bi bi-list-ul me-2"></i>Listar Produtos</a></li>
                                <li><a class="dropdown-item" asp-controller="ProductsMvc" asp-action="Create"><i class="bi bi-plus-circle me-2"></i>Novo Produto</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/swagger#/Products" target="_blank"><i class="bi bi-code-slash me-2"></i>API Swagger</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="fornecedoresDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-building me-1"></i>Fornecedores
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="fornecedoresDropdown">
                                <li><a class="dropdown-item" asp-controller="SuppliersMvc" asp-action="Index"><i class="bi bi-list-ul me-2"></i>Listar Fornecedores</a></li>
                                <li><a class="dropdown-item" asp-controller="SuppliersMvc" asp-action="Create"><i class="bi bi-plus-circle me-2"></i>Novo Fornecedor</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/swagger#/Suppliers" target="_blank"><i class="bi bi-code-slash me-2"></i>API Swagger</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="estoqueDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-clipboard-data me-1"></i>Estoque
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="estoqueDropdown">
                                <li><a class="dropdown-item" asp-controller="StockMvc" asp-action="Index"><i class="bi bi-list-ul me-2"></i>Listar Estoque</a></li>
                                <li><a class="dropdown-item" asp-controller="StockMvc" asp-action="LowStock"><i class="bi bi-exclamation-triangle me-2 text-warning"></i>Estoque Baixo</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/swagger#/Stock" target="_blank"><i class="bi bi-code-slash me-2"></i>API Swagger</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/configuracoes">
                                <i class="bi bi-gear me-1"></i>Configurações
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/swagger" target="_blank">
                                <i class="bi bi-file-earmark-code me-1"></i>API Documentation
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid px-4 py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light mt-auto py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-3 mb-md-0">
                    <h5 class="mb-3">
                        <i class="bi bi-box-seam me-2"></i>OPME Stock Management
                    </h5>
                    <p class="text-muted mb-0">Sistema para controle e gerenciamento de materiais cirúrgicos</p>
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <h6 class="mb-3">Links Rápidos</h6>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-muted text-decoration-none"><i class="bi bi-house me-1"></i>Início</a></li>
                        <li><a href="/produtos" class="text-muted text-decoration-none"><i class="bi bi-box me-1"></i>Produtos</a></li>
                        <li><a href="/fornecedores" class="text-muted text-decoration-none"><i class="bi bi-building me-1"></i>Fornecedores</a></li>
                        <li><a href="/estoque" class="text-muted text-decoration-none"><i class="bi bi-clipboard-data me-1"></i>Estoque</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="mb-3">API</h6>
                    <ul class="list-unstyled">
                        <li><a href="/swagger" class="text-muted text-decoration-none" target="_blank"><i class="bi bi-file-earmark-code me-1"></i>Swagger UI</a></li>
                        <li><a href="/swagger/v1/swagger.json" class="text-muted text-decoration-none" target="_blank"><i class="bi bi-code-square me-1"></i>API JSON</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4 bg-secondary">
            <div class="row">
                <div class="col-md-12 text-center text-muted">
                    <p class="mb-0">&copy; 2024 - OPME Stock Management. Todos os direitos reservados.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

