@model SupplierListViewModel
@{
    ViewData["Title"] = "Fornecedores";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-building me-2"></i>Fornecedores</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Novo Fornecedor
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="get" class="mb-4">
    <div class="row g-3">
        <div class="col-md-6">
            <input type="text" name="searchTerm" class="form-control" placeholder="Buscar por nome, CNPJ ou e-mail..." value="@Model.SearchTerm">
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-search me-1"></i>Buscar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>CNPJ</th>
                <th>Telefone</th>
                <th>E-mail</th>
                <th>Status</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Suppliers.Any())
            {
                @foreach (var supplier in Model.Suppliers)
                {
                    <tr>
                        <td><strong>@supplier.Nome</strong></td>
                        <td>@supplier.Cnpj</td>
                        <td>@supplier.Telefone</td>
                        <td>@supplier.Email</td>
                        <td>
                            @if (supplier.Ativo)
                            {
                                <span class="badge bg-success">Ativo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inativo</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@supplier.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@supplier.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@supplier.Id" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este fornecedor?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                        Nenhum fornecedor encontrado
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

