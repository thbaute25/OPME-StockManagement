@model StockListViewModel
@{
    ViewData["Title"] = Model.ShowLowStock ? "Estoque Baixo" : "Estoque";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="bi bi-clipboard-data me-2"></i>@(Model.ShowLowStock ? "Estoque Baixo" : "Estoque")
    </h2>
    <div>
        <a asp-action="LowStock" class="btn btn-warning">
            <i class="bi bi-exclamation-triangle me-1"></i>Ver Estoque Baixo
        </a>
        <a asp-action="Index" asp-route-minQuantity="" class="btn btn-secondary">
            <i class="bi bi-list-ul me-1"></i>Ver Todos
        </a>
    </div>
</div>

@if (Model.ShowLowStock)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-2"></i>
        Produtos com estoque abaixo de <strong>@Model.MinQuantityFilter</strong> unidades
    </div>
}

<form method="get" class="mb-4">
    <div class="row g-3">
        <div class="col-md-4">
            <label for="minQuantity" class="form-label">Quantidade Mínima:</label>
            <input type="number" name="minQuantity" id="minQuantity" class="form-control" value="@Model.MinQuantityFilter" min="0" placeholder="Filtrar por quantidade mínima">
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-funnel me-1"></i>Filtrar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Limpar</a>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Código</th>
                <th>Produto</th>
                <th>Quantidade</th>
                <th>Última Atualização</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Stocks.Any())
            {
                @foreach (var stock in Model.Stocks)
                {
                    <tr>
                        <td><strong>@stock.ProductCodigo</strong></td>
                        <td>@stock.ProductNome</td>
                        <td>
                            <span class="badge @(stock.QuantidadeAtual < 10 ? "bg-danger" : stock.QuantidadeAtual < 50 ? "bg-warning" : "bg-success") fs-6">
                                @stock.QuantidadeAtual unidades
                            </span>
                        </td>
                        <td>@stock.DataUltimaAtualizacao.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (stock.QuantidadeAtual < 10)
                            {
                                <span class="badge bg-danger">Crítico</span>
                            }
                            else if (stock.QuantidadeAtual < 50)
                            {
                                <span class="badge bg-warning">Atenção</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Normal</span>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">
                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                        Nenhum item de estoque encontrado
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

